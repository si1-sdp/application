{
  "name" : "dgfip-si1/application",
  "description" : "Provides a container to command line applications.",
  "type" : "library",
  "license" : "GPL-3.0-or-later",
  "authors": [
    {
      "name" : "Jean-Marie Gervais"
    },
    {
      "name" : "Mikael Meulle"
    }

  ],
  "keywords" : [ "command", "config" ],
  "require" : {
    "php" : ">=8.1",
    "composer/composer" : "^2, >=2.4",
    "consolidation/robo" : "^4.0",
    "league/container" : "^4.0, >=4.2",
    "dgfip-si1/config-helper": "^1.0, >=1.0.alpha10",
    "monolog/monolog" : "^3.2",
    "symfony/console" : "^6"
  },	
  "require-dev": {
    "dgfip-si1/test-logger": ">= 1.0.alpha12",
    "escapestudios/symfony2-coding-standard": "^3.12",
    "mikey179/vfsstream": "^1.6, >=1.6.10",
    "mockery/mockery": "^1.4",
    "phpstan/phpstan": "^1",
    "phpstan/phpstan-symfony": "*",
    "phpunit/phpunit": "^9.5, >=9.5.26",
    "phpunit/php-code-coverage": "^9.2, >=9.2.19",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "minimum-stability" : "alpha",
  "prefer-stable" : true,
  "autoload": {
    "psr-4": {
      "DgfipSI1\\Application\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DgfipSI1\\ApplicationTests\\": "tests/phpunit/src"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit --log-junit tests/results/phpunit.xml",
    "phpstan": "XDEBUG_MODE=off php -d memory_limit=512M vendor/bin/phpstan analyse --no-progress --error-format=junit",
    "phpcs": "vendor/bin/phpcs --report=junit"
  }
}
